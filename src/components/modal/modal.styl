@include '../styles/vars'
.modal-holder
  position fixed
  width 100%
  height 100%
  min-height 100%
  z-index 100
  pointer-events none
  opacity 0
  transition 0s 0.4s
  .modal-clickscreen
    background rgba(255,255,255,0.3)
    height 100%
    display flex
    justify-content center
    align-items flex-start
    opacity 0
    transition opacity .2s
    .modal-window
      margin-top 6em
      background white
      border 1px solid #aaa
      width 80%
      max-width 30em
      max-height 80vh
      overflow-y auto
      border-radius 1em
      transition margin .2s
body.modal-out
  .modal-holder
    opacity 1
    pointer-events all
    transition 0s
    .modal-clickscreen
      opacity 1
      .modal-window
        margin-top 4em